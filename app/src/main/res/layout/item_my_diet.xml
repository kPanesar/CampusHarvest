<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/ripple">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Spent: $0.00"
            android:id="@+id/tv_spent"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:padding="@dimen/abc_action_bar_icon_vertical_padding_material"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total:"
            android:id="@+id/tv_total"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:padding="@dimen/abc_action_bar_icon_vertical_padding_material"/>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_grocery_list"
        android:paddingTop="@dimen/market_list_padding"
        android:choiceMode="multipleChoice"/>
</LinearLayout>